{
  "description": "Sentient Sims companion app",
  "keywords": [
    "electron",
    "boilerplate",
    "react",
    "typescript",
    "ts",
    "sass",
    "webpack",
    "hot",
    "reload"
  ],
  "homepage": "https://github.com/guspuffygit/sentient-sims-app#readme",
  "bugs": {
    "url": "https://github.com/guspuffygit/sentient-sims-app/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guspuffygit/sentient-sims-app.git"
  },
  "license": "MIT",
  "author": {
    "name": "Gus Puffy",
    "url": "https://www.sentientsimulations.com"
  },
  "contributors": [],
  "main": "./src/main/main.ts",
  "scripts": {
    "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
    "build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
    "build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
    "postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
    "lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
    "package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder build --publish never",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
    "start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
    "start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
    "start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
    "start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
    "test": "ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest '\\.test\\.ts' '\\.test\\.tsx'",
    "test:single": "ELECTRON_RUN_AS_NODE=true JEST_DISABLE_COVERAGE=true ./node_modules/.bin/electron ./node_modules/.bin/jest 'TokenTruncate.test.ts'",
    "test:e2e": "ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest 'ChromeDriver.e2e.test.ts'",
    "test:api": "ELECTRON_RUN_AS_NODE=true ./node_modules/.bin/electron ./node_modules/.bin/jest 'Api.test.ts'",
    "test:unit": "ELECTRON_RUN_AS_NODE=true JEST_DISABLE_COVERAGE=true ./node_modules/.bin/electron ./node_modules/.bin/jest '(?<!\\.it)\\.test\\.(ts|tsx)$'",
    "test:watch": "ELECTRON_RUN_AS_NODE=true JEST_DISABLE_COVERAGE=true ./node_modules/.bin/electron ./node_modules/.bin/jest --watch-all '(?<!\\.it)\\.test\\.(ts|tsx)$'"
  },
  "browserslist": [],
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          ".prettierrc",
          ".eslintrc"
        ],
        "options": {
          "parser": "json"
        }
      }
    ]
  },
  "dependencies": {
    "@aws-amplify/ui-react": "^4.6.4",
    "@aws-sdk/client-s3": "^3.347.1",
    "@aws-sdk/credential-provider-node": "^3.501.0",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/lab": "^5.0.0-alpha.132",
    "@mui/material": "^5.13.2",
    "@mui/x-data-grid": "^6.11.2",
    "@nem035/gpt-3-encoder": "^1.1.7",
    "@patternfly/react-core": "^5.1.1",
    "@patternfly/react-log-viewer": "^5.0.0",
    "@patternfly/react-styles": "^5.1.1",
    "@tanstack/react-query": "^5.18.1",
    "@widgetbot/react-embed": "^1.7.0",
    "adm-zip": "^0.5.10",
    "aws-amplify": "^5.3.6",
    "electron-debug": "^3.2.0",
    "electron-log": "^5.0.0-beta.24",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "express": "^4.18.2",
    "jwt-decode": "^3.1.2",
    "openai": "4.55.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "react-window": "^1.8.9",
    "uuid": "9.0.1",
    "xml2js": "^0.6.0"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@electron/rebuild": "^3.2.10",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
    "@svgr/webpack": "^7.0.0",
    "@teamsupercell/typings-for-css-modules-loader": "^2.5.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/adm-zip": "^0.5.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.1",
    "@types/node": "18.16.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "@types/react-test-renderer": "^18.0.0",
    "@types/react-window": "^1.8.5",
    "@types/request": "^2.48.8",
    "@types/selenium-webdriver": "^4.1.21",
    "@types/terser-webpack-plugin": "^5.0.4",
    "@types/uuid": "^9.0.2",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@types/xml2js": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "better-sqlite3": "^9.1.1",
    "browserslist-config-erb": "^0.0.3",
    "chalk": "^4.1.2",
    "concurrently": "^7.6.0",
    "core-js": "^3.27.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "detect-port": "^1.5.1",
    "electron": "^23.0.0",
    "electron-builder": "^24.2.1",
    "electron-chromedriver": "^23.3.13",
    "electron-devtools-installer": "^3.2.0",
    "electronmon": "^2.0.2",
    "eslint": "8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-erb": "4.0.6",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-compat": "^4.1.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.4",
    "react-refresh": "^0.14.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.1.2",
    "sass": "^1.58.0",
    "sass-loader": "^13.2.0",
    "selenium-webdriver": "^4.17.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.6",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^4.9.5",
    "url-loader": "^4.1.1",
    "webpack": "5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1",
    "webpack-merge": "^5.8.0",
    "whatwg-fetch": "^3.6.2"
  },
  "overrides": {
    "uuid": "9.0.1"
  },
  "build": {
    "productName": "SentientSims",
    "appId": "com.sentientsimulations.sentientsims",
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}",
    "afterPack": "./myAfterPackHook.js",
    "npmRebuild": false,
    "files": [
      "dist",
      "node_modules",
      "package.json"
    ],
    "afterSign": ".erb/scripts/notarize.js",
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "arm64",
          "x64"
        ]
      },
      "type": "distribution",
      "mergeASARs": false,
      "hardenedRuntime": true,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    },
    "directories": {
      "app": "release/app",
      "buildResources": "assets",
      "output": "release/build"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "guspuffygit",
      "repo": "sentient-sims-app"
    }
  },
  "devEngines": {
    "node": ">=14.x",
    "npm": ">=7.x"
  },
  "electronmon": {
    "patterns": [
      "!**/**",
      "src/main/**"
    ],
    "logLevel": "quiet"
  }
}
